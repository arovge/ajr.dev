{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module",
    "ecmaVersion": 6
  },
  "rules": {
    "semi": ["error", "always"],
    "jsx-quotes": ["error", "prefer-single"],
    "quotes": ["error", "single"],
    "indent": ["error", 4]
  }
}
